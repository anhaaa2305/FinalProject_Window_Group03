<UserControl
    x:Class="WpfApp1.Views.UserControls.UserHomeControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:WpfApp1"
    xmlns:utils="clr-namespace:WpfApp1.Utils"
	xmlns:uc="clr-namespace:WpfApp1.Views.UserControls"
	xmlns:vm="clr-namespace:WpfApp1.ViewModels"
    mc:Ignorable="d">
	<UserControl.Resources>
		<ResourceDictionary Source="/Resources/Dictionaries/UserHomeNavBarItemStrings.xaml" />
	</UserControl.Resources>
	<DockPanel>
		<uc:UserNavBarControl DockPanel.Dock="Top"
			MaxHeight="160"
			Margin="12,4">
			<StackPanel Orientation="Horizontal">
				<Button
					Content="{StaticResource Item_VehicleStore}"
					Command="{Binding VehicleStoreClickCommand}" />
				<Button
					Content="{StaticResource Item_VehicleRenting}"
					Command="{Binding VehicleRentingClickCommand}" />
				<Button
					Content="{StaticResource Item_RentHistory}"
					Command="{Binding RentHistoryClickCommand}" />
			</StackPanel>
		</uc:UserNavBarControl>
		<ContentPresenter Content="{Binding CurrentView}" />
	</DockPanel>
</UserControl>
